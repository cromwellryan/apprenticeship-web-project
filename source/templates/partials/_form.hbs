<section class="content__section">
  <h1>{{ submit.form.header }}</h1>
  <form class="form" accept-charset="UTF-8" action="/thank-you/" method="POST" netlify>
    <input type="hidden" name="utf8" value="âœ“">

    <label class="form__label" for="{{ submit.form.compensation.id }}">{{ submit.form.compensation.label }}</label>
    <input class="form__radio" type="{{ submit.form.compensation.type }}" name="{{ submit.form.compensation.name }}" value="{{ submit.form.compensation.option_one }}" checked> <span class="form__radio-text">{{ submit.form.compensation.option_one }}</span>
    <input class="form__radio" type="{{ submit.form.compensation.type }}" name="{{ submit.form.compensation.name }}" value="{{ submit.form.compensation.option_two }}"> <span class="form__radio-text">{{ submit.form.compensation.option_two }}</span>

    <label class="form__label" for="{{ submit.form.company.id }}">{{ submit.form.company.label }}</label>
    <input class="form__input" type="{{ submit.form.company.type }}" name="{{ submit.form.company.name }}" id="{{ submit.form.company.id }}" placeholder="{{ submit.form.company.placeholder }}" required>

    <label class="form__label" for="{{ submit.form.company_website.id }}">{{ submit.form.company_website.label }}</label>
    <input class="form__input" type="{{ submit.form.company_website.type }}" name="{{ submit.form.company_website.name }}" id="{{ submit.form.company_website.id }}" placeholder="{{ submit.form.company_website.placeholder }}"validate required>

    <section class="wrapper grid__item grid__item--two-quarters">
        <label class="form__label" for="{{ submit.form.category.id }}">{{ submit.form.category.label }}</label>
        <select class="form__select" name="{{ submit.form.category.name }}">
          {{#forEach submit.form.category.categories}}
            <option value="{{ item }}">{{ item }}</option>
          {{/forEach}}
        </select>
    </section>

    <section class="grid__item grid__item--two-quarters form__section">
        <label class="form__label" for="{{ submit.form.duration.id }}">{{ submit.form.duration.label }}</label>
        <input class="form__number" type="{{ submit.form.duration.type }}" name="{{ submit.form.duration.name }}" id="{{ submit.form.duration.id }}" value="3" validate required>
    </section>

    <label class="form__label" for="{{ submit.form.summary.id }}">{{ submit.form.summary.label }}</label>
    <textarea class="form__textarea" type="{{ submit.form.summary.type }}" name="{{ submit.form.summary.name }}" id="{{ submit.form.summary.id }}" placeholder="{{ submit.form.summary.placeholder }}" required></textarea>

    <label class="form__label" for="{{ submit.form.location.id }}">{{ submit.form.location.label }}</label>
    <input class="form__input" type="{{ submit.form.location.type }}" name="{{ submit.form.location.name }}" id="{{ submit.form.location.id }}" placeholder="{{ submit.form.location.placeholder }}" required>

    <label class="form__label" for="{{ submit.form.learn_more.id }}">{{ submit.form.learn_more.label }}</label>
    <input class="form__input" type="{{ submit.form.learn_more.type }}" name="{{ submit.form.learn_more.name }}" id="{{ submit.form.learn_more.id }}" placeholder="{{ submit.form.learn_more.placeholder }}" validate required>

    <label class="form__label" for="{{ submit.form.email.id }}">{{ submit.form.email.label }}</label>
    <input class="form__input" type="{{ submit.form.email.type }}" name="{{ submit.form.email.name }}" id="{{ submit.form.email.id }}" placeholder="{{ submit.form.email.placeholder }}" validate required>

    <button class="form__button button" type="{{ submit.form.button.type}}">{{ submit.form.button.text }}</button>
  </form>
</section>
