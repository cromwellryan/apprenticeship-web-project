{
  "name": "apprentice-at",
  "version": "0.0.1",
  "description": "An online listing of apprenticeship opportunities.",
  "engines": {
    "node": "12.0.0"
  },
  "scripts": {
    "build": "npm run sass:build && grunt build",
    "postinstall": "grunt dist",
    "dev": "grunt dev",
    "serve": "mkdir -p dist && touch dist/index.html && cd dist && browser-sync --no-notify --files \"**/*\"",
    "start": "run-p dev sass:watch serve",
    "sass:build": "sass source/scss:dist/assets/css",
    "sass:watch": "npm run sass:build -- --watch",
    "test": "cypress open",
    "test:ci": "cypress run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sparkbox/apprentice-at.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sparkbox/apprentice-at/issues"
  },
  "homepage": "https://github.com/sparkbox/apprentice-at",
  "dependencies": {
    "assemble": "^0.4.42",
    "assemble-contrib-permalinks": "^0.3.6",
    "grunt": "^0.4.5",
    "grunt-autoprefixer": "^3.0.0",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-concat": "^0.5.1",
    "grunt-contrib-copy": "^0.8.0",
    "grunt-contrib-watch": "^0.6.1",
    "sass": "^1.49.7"
  },
  "devDependencies": {
    "browser-sync": "^2.27.7",
    "cypress": "^9.4.1",
    "netlify-plugin-cypress": "^2.2.0",
    "npm-run-all": "^4.1.5"
  }
}
